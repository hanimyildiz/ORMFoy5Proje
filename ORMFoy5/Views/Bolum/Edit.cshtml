@model ORMFoy5.Models.Bolum

@{
    ViewBag.Title = "Bölüm Düzenle";
}

<h2>Bölüm Düzenle</h2>

@if (Model == null)
{
    <p>Hata: Bölüm bulunamadı.</p>
    <div>
        @Html.ActionLink("Listeye Geri Dön", "Index", null, new { @class = "btn btn-default" })
    </div>
}
else
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.BolumID)

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.BolumAd, new { @class = "control-label" })
                @Html.EditorFor(model => model.BolumAd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BolumAd, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(model => model.FakulteID, new { @class = "control-label" })
                @Html.DropDownList("FakulteID", (SelectList)ViewBag.FakulteID, "-- Seçiniz --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FakulteID, "", new { @class = "text-danger" })
            </div>
            <div>
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Listeye Geri Dön", "Index", null, new { @class = "btn btn-default" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
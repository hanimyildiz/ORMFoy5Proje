@model ORMFoy5.Models.OgrenciDers

@{
    ViewBag.Title = "Ders Düzenle";
}

<h2>Ders Düzenle</h2>

@if (Model == null)
{
    <p>Hata: Kayıt bulunamadı.</p>
}
else
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.OgrenciDersID)

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.OgrenciID, "Öğrenci", new { @class = "control-label" })
                @Html.DropDownListFor(model => model.OgrenciID, (SelectList)ViewBag.OgrenciID, "-- Seçiniz --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OgrenciID, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(model => model.DersID, "Ders", new { @class = "control-label" })
                @Html.DropDownListFor(model => model.DersID, (SelectList)ViewBag.DersID, "-- Seçiniz --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DersID, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(model => model.Yil, new { @class = "control-label" })
                @Html.EditorFor(model => model.Yil, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Yil, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(model => model.Yariyil, new { @class = "control-label" })
                @Html.EditorFor(model => model.Yariyil, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Yariyil, "", new { @class = "text-danger" })
            </div>
            <div>
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Listeye Geri Dön", "Index", null, new { @class = "btn btn-default" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}